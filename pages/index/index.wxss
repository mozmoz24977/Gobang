.userinfo {
  display: flex;
  flex-direction: column;
  align-items: center;
  margin-top: 350px;
}

.userinfo-avatar {
  width: 128rpx;
  height: 128rpx;
  margin: 20rpx;
  border-radius: 50%;
}

.userinfo-nickname {
  color: rgb(59, 59, 59);
}
.getUserInfo{
  width: 200px!important;
  font-size: 20px;
  background-color: rgb(94, 94, 94);
  color: rgb(255, 255, 255);
}
.button{
  width: 200px!important;
  margin-top: 20px;
  font-size: 20px;
  text-decoration-color: cornsilk;
  background-color: green;
  color: rgb(255, 239, 215);
  box-shadow: gray 5px 5px 10px;
}
